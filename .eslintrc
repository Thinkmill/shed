{
  parser: 'babel-eslint',
  env: {
    browser: true,
    es6: true,
    node: true,
  },
  rules: {
    curly: ['error', 'multi-line'],
    'no-shadow': 'warn',
    'no-trailing-spaces': 'error',
    'no-undef': 'error',
    'no-underscore-dangle': 'error',
    'no-unused-expressions': 'error',
    'no-unused-vars': [
      'error',
      {
        args: 'after-used',
        ignoreRestSiblings: true,
        vars: 'all',
      },
    ],
    'object-curly-spacing': ['error', 'always'],
    quotes: ['error', 'single', 'avoid-escape'],
    semi: 'error',
    strict: 'off',
  }
}
